class Return[T]
{
  value: T;

  create[R: Return[T]](value: R<~T): R
  {
    new(value)
  }
}

// `return` uses create sugar to throw a Return[T] exception.
class return[T]
{
  create(x: T = None): throw Return[T]
  {
    throw Return[T](x)
  }
}
